{
  "name": "MRPT Token",
  "scripts": {
    "setup": "curl -L https://foundry.paradigm.xyz | bash && foundryup",
    "compile": "forge build",
    "clean": "forge clean",
    "slither": "slither .",
    "test:fake": "npm run test:unit_fake",
    "test:unit_fake": "forge test --match-path ./test/fundManager.t.sol -vv",
    "test:real": "npm run test:unit_real",
    "test:unit_real": "forge test --match-path ./test/fundManagerReal.t.sol -vv",
    "test:fundManger": "forge test --match-path ./test/fundManager.t.sol -vv",
    "test:withdraw_eth": "forge test --match-path ./test/fundManager.t.sol -vvvv --match-test testWithdrawEth",
    "test:withdraw_token": "forge test --match-path ./test/fundManager.t.sol -vvvv --match-test testWithdrawToken",
    "test:upgrade": "forge test --match-path ./test/fundManager.t.sol -vvvv --match-test testUpgrade",
    "deploy": "forge create --private-key YOUR-PRIVATE-KEY --rpc-url ${SEPOLIA_RPC_URL} --constructor-args $START_TIME_STAMP $ECOSYSTEM $MARKETING $STAKING_REWARD $TEAM $ADVISOR $LZPOINT --verify --etherscan-api-key YOUR-ETHERSCAN-API-KEY src/MRPTToken.sol:MRPTToken",
    "deployToSepolia": "forge script script/deployContract.s.sol:FundManagerScript --broadcast --verify src/fundManager.sol:FundManager --rpc-url sepolia --etherscan-api-key sepolia -vv",
    "deployToSepoliaWithoutVerify": "forge script script/deployContract.s.sol:FundManagerScript --broadcast --rpc-url sepolia --etherscan-api-key sepolia -vv",
    "deployToEthereum": "forge script script/deployContract.s.sol:FundManagerScript --broadcast --rpc-url ethereum --etherscan-api-key ethereum -vv",
    "deployToMumbai": "forge script script/deployContract.s.sol:FundManagerScript --broadcast --verify src/fundManager.sol:FundManager --rpc-url mumbai --etherscan-api-key mumbai -vv",
    "deployToPolygonPos": "forge script script/deployContract.s.sol:FundManagerScript --broadcast --rpc-url polygonpos --etherscan-api-key polygonpos -vv",
    "deployToBSC": "forge script script/deployContract.s.sol:FundManagerScript --broadcast --rpc-url bsc --etherscan-api-key bsc -vv",
    "deployToBSCTest": "forge script script/deployContract.s.sol:FundManagerScript --broadcast --verify src/fundManager.sol:FundManager --rpc-url bsctest --etherscan-api-key bsc -vv",
    "deployToFundManagerUpgrade": "forge script script/deployUpgradedContract.s.sol:FundManagerUpgradeScript --broadcast --verify src/fundManagerUpgrade.sol:FundManagerUpgrade --rpc-url sepolia --etherscan-api-key sepolia -vv",
    "sourcifyVerifyProxySepolia": "forge verify-contract 0xe327cA564945FEFCB4b543a9984141Be956C3DEd EIP173Proxy --chain-id 11155111 --verifier sourcify --verifier-url https://sourcify.dev/server",
    "sourcifyVerifyImplementationSepolia": "forge verify-contract 0xe3df73400146457fd75efd1bf167ed31ce7e9d79 FundManager --chain-id 11155111 --verifier sourcify --verifier-url https://sourcify.dev/server",
    "sourcifyVerifyEth": "forge verify-contract 0x7be1992a648bf4b8f7dbd85cb3e734d8e8863c40 EIP173Proxy --chain-id 1 --verifier sourcify --verifier-url https://sourcify.dev/server",
    "sourcifyVerifyPolygon": "forge verify-contract 0xacc5ebba190d84466319c4c05accce10f60feabf FundManager --chain-id 137 --verifier sourcify --verifier-url https://sourcify.dev/server",
    "sourcifyVerifyBSC": "forge verify-contract 0x7be1992a648bf4b8f7dbd85cb3e734d8e8863c40 EIP173Proxy --chain-id 56 --verifier sourcify --verifier-url https://sourcify.dev/server",
    "verifyEth": "forge verify-contract 0x8d59bca8183D6a75A1db4a5803c763fBbE08c6aB FundManager --watch",
    "git": "git add . && git commit -m 'Test' && git push --all"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^7.3.0",
    "i": "^0.3.7"
  }
}